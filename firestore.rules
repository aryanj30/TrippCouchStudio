
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read/write for site content (for the Admin CMS demo)
    match /site_content/{document=**} {
      allow read, write: if true;
    }
    
    // Allow anyone to create a consultation request (Public Form)
    // Allow admins (or anyone in this demo) to read/update them
    match /consultations/{document=**} {
      allow create: if true;
      allow read, write: if true;
    }

    // User Data & Cart
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Orders - Allow authenticated users to create/read
    match /orders/{orderId} {
      allow read, write: if request.auth != null;
    }

    // Chat System
    match /chats/{chatId} {
      allow read, write: if request.auth != null;
    }
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Admin Check
    match /admins/{userId} {
      allow read: if request.auth != null;
    }
  }
}
